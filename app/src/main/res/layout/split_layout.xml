<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="total time"
        android:id="@+id/total_split"
        android:layout_alignTop="@+id/split_split"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:id="@+id/split_time_total"
        android:layout_below="@+id/total_split"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="split time"
        android:id="@+id/split_split"
        android:layout_below="@+id/space"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:id="@+id/split_time_split"
        android:layout_below="@+id/split_split"
        android:layout_alignStart="@+id/split_split"
        android:layout_marginRight="20dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="#"
        android:textSize="15dp"
        android:id="@+id/split_number"
        android:layout_alignTop="@+id/split_split"
        android:layout_centerHorizontal="true" />


</RelativeLayout>